<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.igi">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:icon="@mipmap/igi_ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/igi_ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImagePicker"></activity>
        <activity
            android:name=".PopupRecPage"
            android:theme="@style/AppTheme.PopTheme" />
        <activity android:name=".InfoPage" />
        <activity android:name=".Problem" />
        <activity android:name=".Solution" />
        <activity android:name=".Rate" />
        <activity android:name=".Develop" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".signup" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>