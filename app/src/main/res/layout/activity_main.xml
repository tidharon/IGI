<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //image for background of the activity
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_home1" />

    //rocket button for design
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="480dp"
        android:layout_height="830dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/LoginUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cow_rocket_hmpg" />

    //set button view for user's login
    <Button
        android:id="@+id/ButLogin"
        android:layout_width="133dp"
        android:layout_height="62dp"
        android:background="@drawable/but_bkgrnd"
        android:fontFamily="@font/poppins"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textColorLink="#03A9F4"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/LoginPassword"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
        app:layout_constraintVertical_bias="0.476" />

    //set button view for sign up
    <Button
        android:id="@+id/ButToSignUp"
        android:layout_width="133dp"
        android:layout_height="62dp"
        android:background="@drawable/but_bkgrnd"
        android:fontFamily="@font/poppins"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="#F2FFFFFF"
        android:textColorLink="#03A9F4"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ButLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
        app:layout_constraintVertical_bias="0.476" />

    //text filed for user to insert Email address for login
    <EditText
        android:id="@+id/LoginUsername"
        android:layout_width="313dp"
        android:layout_height="62dp"
        android:background="@drawable/emty_fld"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#8E8E8E"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    //text filed for user to insert password for login
    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="313dp"
        android:layout_height="62dp"
        android:background="@drawable/emty_fld"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#8E8E8E"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    //image for title design (IGI)
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="249dp"
        android:layout_height="168dp"
        android:layout_marginBottom="101dp"
        app:layout_constraintBottom_toTopOf="@+id/LoginUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/title_hmpg" />

    //button to move to info page
    <Button
        android:id="@+id/info_but"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/info_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    //object used in design to give the user feeling that there is process
    <ProgressBar
        android:id="@+id/Login_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>